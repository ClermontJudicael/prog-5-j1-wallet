# .clang-tidy
Checks: >
  clang-analyzer-*,
  bugprone-*,
  modernize-*,
  performance-*,
  readability-*,
  -readability-identifier-naming,           # disable naming police
  -readability-identifier-length,           # disable "p is too short"
  -modernize-use-trailing-return-type,      # nobody uses this in real code
  -modernize-use-nodiscard,                 # optional for small projects
  -cppcoreguidelines-avoid-non-const-global-variables,
  -bugprone-narrowing-conversions

WarningsAsErrors: "*"

HeaderFilterRegex: ".*"

CheckOptions:
  - key: modernize-use-nullptr.NullMacros
    value: "NULL"
